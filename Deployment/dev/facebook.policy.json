{
    "Version": "2012-10-17",
    "Statement": [
       {
          "Action": [
             "s3:PutObject",
             "s3:PutObjectAcl"
          ],
          "Resource": [
              "arn:aws:s3:::dev.selfieconnect.userphotos/facebook-${graph.facebook.com:id}/*"
          ],
          "Effect": "Allow"
       },
       {
          "Action": [
             "s3:ListBucket"
          ],
          "Resource": [
             "arn:aws:s3:::dev.selfieconnect.userphotos"
          ],
          "Effect": "Allow",
          "Condition": {
             "StringEquals": {
                "s3:prefix": "facebook-${graph.facebook.com:id}"
              }
           }
        }
     ]
 }